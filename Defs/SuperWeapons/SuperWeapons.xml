<?xml version="1.0" encoding="utf-8"?>
<Defs>
<!-- Defs for Supler Gun -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_MySuperGun</defName>
    <label>my super gun blast</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <!-- <damageDef>Bullet</damageDef> -->
      <damageDef>Bullet</damageDef>
      <!-- <explosionRadius>1</explosionRadius> -->
      <damageAmountBase>25</damageAmountBase>
      <stoppingPower>3</stoppingPower>
      <!-- <flyOverhead>true</flyOverhead> -->
      <armorPenetrationBase>0.14</armorPenetrationBase>
      <speed>100</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_SuperGun</defName>
    <label>Super Gun</label>
    <description>Super Gun</description>
    <useHitPoints>false</useHitPoints>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/BoltActionRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>0</generateCommonality>
    <generateAllowChance>0</generateAllowChance>
    <soundInteract>Interact_Rifle</soundInteract>
    <weaponClasses>
      <li>LongShots</li>
    </weaponClasses>
    <statBases>
      <DeteriorationRate>0</DeteriorationRate>
      <Beauty>100</Beauty>
      <MarketValue>9000</MarketValue>
      <Flammability>0</Flammability>
      <WorkToMake>100</WorkToMake>
      <Mass>0.5</Mass>
      <AccuracyTouch>1</AccuracyTouch>
      <AccuracyShort>1</AccuracyShort>
      <AccuracyMedium>1</AccuracyMedium>
      <AccuracyLong>1</AccuracyLong>
      <RangedWeapon_Cooldown>0.3</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <WoodLog>5</WoodLog>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>0</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>Campfire</li>
        <li>ElectricStove</li>
        <li>FueledStove</li>
      </recipeUsers>
      <researchPrerequisite>Electricity</researchPrerequisite>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_MySuperGun</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>1000</range>
        <burstShotCount>10</burstShotCount>
        <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
        <soundCast>Shot_BoltActionRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>25</power>
        <cooldownTime>0.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>25</power>
        <cooldownTime>0.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>


  <!-- Defs for Super Rocket Gun! -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_MySuperRocket</defName>
    <label>super rocket</label>
    <graphicData>
      <texPath>Things/Projectile/Rocket_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <!-- Use default damage from explosion def -->
      <damageAmountBase>75</damageAmountBase>
      <flyOverhead>true</flyOverhead>
      <explosionRadius>7</explosionRadius>
      <speed>50</speed>
    </projectile>
  </ThingDef>

